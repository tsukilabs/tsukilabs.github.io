{
  "indentWidth": 2,
  "lineWidth": 100,
  "newLineKind": "lf",
  "useTabs": false,
  "typescript": {
    "nextControlFlowPosition": "nextLine",
    "operatorPosition": "sameLine",
    "quoteProps": "asNeeded",
    "quoteStyle": "alwaysSingle",
    "semiColons": "always",
    "trailingCommas": "onlyMultiLine",

    "module.sortExportDeclarations": "maintain",
    "module.sortImportDeclarations": "maintain",
    "exportDeclaration.sortNamedExports": "maintain",
    "exportDeclaration.sortTypeOnlyExports": "none",
    "importDeclaration.sortNamedImports": "maintain",
    "importDeclaration.sortTypeOnlyImports": "none"
  },
  "markup": {
    "printWidth": 120,
    "quotes": "double",
    "vBindSameNameShortHand": true,
    "vBindStyle": "short",
    "vForDelimiterStyle": "of",
    "vSlotStyle": "short",
    "vOnStyle": "short",
    "vue.scriptIndent": false,
    "vue.styleIndent": false
  },
  "malva": {
    "hexCase": "lower",
    "hexColorLength": "long",
    "printWidth": 100,
    "quotes": "alwaysDouble"
  },
  "excludes": [
    "**/autogenerated",
    "**/pkg",
    "**/*-lock.yaml",
    "**/LICENSE"
  ],
  "plugins": [
    "https://plugins.dprint.dev/typescript-0.95.8.wasm",
    "https://plugins.dprint.dev/json-0.20.0.wasm",
    "https://plugins.dprint.dev/markdown-0.19.0.wasm",
    "https://plugins.dprint.dev/g-plane/malva-v0.14.1.wasm",
    "https://plugins.dprint.dev/g-plane/markup_fmt-v0.23.1.wasm",
    "https://plugins.dprint.dev/g-plane/pretty_yaml-v0.5.1.wasm"
  ]
}
